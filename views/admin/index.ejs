<% if (!admin) { %>

<div class="small-12 medium-offset-8 medium-4 columns">
  <br/>

  <h2 class="text-center">Connexion à l'interface d'administration</h2>

  <p class="text-center"><em>admin@admin.admin – admin</em></p>
  <br/>

  <form action="/API/admin/session" method="POST">
    <div class="row">
      <label for="adminEmail">
        <input type="email" name="adminEmail" required id="adminEmail" placeholder="Votre e-mail"/>
      </label>
    </div>
    <div class="row">
      <label for="adminPassword">
        <input type="password" name="adminPassword" required id="adminPassword" placeholder="Votre mot de passe"/>
      </label>
    </div>
    <div class="row">
      <input type="submit" class="button" value="Se connecter"/>
    </div>
  </form>
</div>


<% }
else { %>

<div class="row">

  <form class="float-right" action="/API/admin/session/delete" method="POST">
    <button class="button" type="submit">Se déconnecter</button>
  </form>

  <h1 class="text-center">Bonjour <%- admin.firstname %></h1>

  <div class="small-12 medium-6 columns">
    <h3 class="text-center">Notifications</h3>

    <table width="100%">
      <thead>
      <tr>
        <th>Heure</th>
        <th>Titre</th>
      </tr>
      </thead>
      <tbody>

      <% for(var i = 0; i < 3; i++) { %>
      <tr>
        <td>Il y a <%= 1+i * 2 %> min</td>
        <td><a href="/admin/crisis/create">Un attentat</a></td>
      </tr>
      <% } %>
      </tbody>
    </table>
  </div>
  <div class="small-12 medium-6 columns">
    <h3 class="text-center">Liste des crises</h3>

    <table width="100%">
      <thead>
      <tr>
        <th>Heure</th>
        <th>Titre</th>
      </tr>
      </thead>
      <tbody>
      <% for(var i = 0; i < lcrisis.length; i++) { %>
      <tr>
        <td>Il y a <%= 1+(i * 2) % 7 %> min</td>
        <td><a href="/admin/crisis/show/<%= lcrisis[i].id %>">[<%= lcrisis[i].type %>] <%= lcrisis[i].startDate %></a></td>
      </tr>
      <% } %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <a href="/admin/crisis/create"><h3>Créer une crise</h3></a></div>
</div>
<% } %>
